rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - admin can read/write, user can read own
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.uid == userId
      );
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Profiles by MST - authenticated users can read, admin can write
    match /profiles/{mst} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Mappings by MST - authenticated users can read, admin can write
    match /mappings/{mst} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
